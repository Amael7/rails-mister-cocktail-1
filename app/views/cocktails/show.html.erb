<h1>Here is Cocktail Details</h1>

<h2>Cocktail name : <%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> : <%= dose.description %> -- <%= link_to dose_path(dose),
      method: 'delete',
      data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </li>
  <%end%>
</ul>

<%= link_to 'delete', cocktail_delete_path, :method => :delete, :confirm => "You sure?" %>


<%= link_to 'Cocktail List', cocktails_path %>
<%= link_to 'Create a new dose', new_cocktail_dose_path(@cocktail) %>
