<div class="nav-bar">
  <h1>Cocktails'Arts</h1>

  <i><i class="fas fa-bars"></i></i>
</div>

<div class="banner-cocktail">
  <h2>Cocktail name : <%= @cocktail.name %></h2>
</div>

<div class="ingredients-list">
  <p>Ingredients List</p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> : <%= dose.description %> -- <%= link_to dose_path(dose),
        method: 'delete',
        data: { confirm: "Are you sure?" } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <%end%>
  </ul>
</div>


<%= link_to 'Cocktail List', cocktails_path %>
<br>
<%= link_to 'Create a new dose', new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to 'delete', cocktail_delete_path, :method => :delete, data: { confirm: "Are you sure?" } %>
